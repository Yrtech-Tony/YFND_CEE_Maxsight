                opacity: 0.8;
            }*/

        /* rightNav */
        .rightNav {
            position: fixed;
            top: 0;
            right: 0;
            z-index: 9999;
            width: 140px;
            cursor: pointer;
            margin: 100px 0 0 0;
        }

        *html .rightNav {
            position: absolute;
            top: expression(eval(document.documentElement.scrollTop));
        }

            .rightNav a {
                display: block;
                position: relative;
                height: 35px;
                line-height: 35px;
                margin-bottom: 2px;
                /*background: RGB(252,252,252);*/
                padding-right: 10px;
                width: 145px;
                overflow: hidden;
                cursor: pointer;
                right: -110px;
            }

                .rightNav a:hover {
                    text-decoration: none;
                    color: #1974A1;
                }

                    .rightNav a:hover em {
                        /*background: RGB(252,252,252);*/
                    }

                .rightNav a em {
